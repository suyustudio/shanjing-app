generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TrailDifficulty {
  EASY
  MODERATE
  HARD
}

model Trail {
  id                String          @id @default(uuid())
  name              String
  description       String?
  distanceKm        Float
  durationMin       Int
  elevationGainM    Int
  difficulty        TrailDifficulty
  tags              String[]
  coverImages       String[]
  gpxUrl            String?
  city              String
  district          String
  startPointLat     Float
  startPointLng     Float
  startPointAddress String?
  safetyInfo        Json?
  boundsNorth       Float?
  boundsSouth       Float?
  boundsEast        Float?
  boundsWest        Float?
  isActive          Boolean         @default(true)
  createdBy         String
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  deletedAt         DateTime?
  
  pois              TrailPoi[]
  favorites         Favorite[]
}

model TrailPoi {
  id          String   @id @default(uuid())
  trailId     String
  name        String
  description String?
  lat         Float
  lng         Float
  type        String
  order       Int
  createdAt   DateTime @default(now())
  
  trail       Trail    @relation(fields: [trailId], references: [id])
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  trailId   String
  createdAt DateTime @default(now())
  
  trail     Trail    @relation(fields: [trailId], references: [id])
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
